\begin_layout Standard
Якобиан равен
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
J=\left|\begin{array}{cc}
\cos\varphi & -r\sin\varphi\\
\sin\varphi & r\cos\varphi
\end{array}\right|=r
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
A^{2}=\intop_{0}^{+\infty}\intop_{0}^{2\pi}e^{-r^{2}}rdrd\varphi=\pi\cdot\intop_{0}^{+\infty}e^{-r^{2}}d\left(r^{2}\right)=\pi\cdot\left(-1\right)\cdot\left.e^{-r^{2}}\right|_{0}^{+\infty}=\pi
\]

\end_inset


