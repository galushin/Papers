\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
A^{2}=\intop_{-\infty}^{+\infty}e^{-x^{2}}dx\cdot\intop_{-\infty}^{+\infty}e^{-y^{2}}dy=\intop_{-\infty}^{+\infty}\intop_{-\infty}^{+\infty}e^{-x^{2}}e^{-y^{2}}dydx=\intop_{-\infty}^{+\infty}\intop_{-\infty}^{+\infty}e^{-\left(x^{2}+y^{2}\right)}dydx
\]

\end_inset


\end_layout

\begin_layout Standard
Перейдём к полярным координатам:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
x=r\cos\varphi
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
y=r\sin\varphi
\]

\end_inset


\end_layout

\begin_layout Standard
